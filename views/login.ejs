<div class="col-sm-6 bg-dark rounded border py-3 offset-sm-1">
    <h1 class="text-center">Login</h1>
    <form action="/login" method="post">
        <div class="form-group mt">
            <input type="text" name="username" id="firstname"class="form-control" placeholder="Enter username" required>
        </div>
        <div class="form-group mt">
            <input type="password" name="password" id="password"class="form-control" value="<%= %>" placeholder="Enter password" required>
        </div>
        
        <button type="submit" class="mt-2 btn btn-success">Login</button>
    </form>
</div>